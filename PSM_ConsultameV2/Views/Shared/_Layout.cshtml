@using Microsoft.AspNet
@using System.Configuration
@{
    var institucion = ConfigurationManager.AppSettings["Institucion"];
    var route = ViewContext.RouteData.Values["Controller"].ToString();
    var acction = ViewContext.RouteData.Values["Action"].ToString();
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(institucion, "Index", "DatosAcademicos", null, htmlAttributes: new { @class = "navbar-brand", style = "color:#fff;" })
            </div>
            <!-- Top Menu Items -->
            <ul class="nav navbar-right top-nav">
                @if (@HttpContext.Current.Session["Alumno"] != null)
                {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <img id="foto" src="@HttpContext.Current.Session["Foto"]" alt="Foto perfil" onerror="this.src='https://via.placeholder.com/40'">
                            <span class="username-text">@HttpContext.Current.Session["Alumno"]</span>
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="@Url.Action("Logout", "Account")" style="background-color: #fff; ">
                                    <i class="glyphicon glyphicon-off"></i> Cerrar sesión
                                </a>
                            </li>
                        </ul>
                    </li>
                }
            </ul>
            <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
            @if (@HttpContext.Current.Session["Alumno"] != null)
            {
                <div class="collapse navbar-collapse navbar-ex1-collapse">
                    <ul class="nav navbar-nav side-nav">

                        <li class="@(acction == "Index" && route == "DatosAcademicos" ? "active" : "")">
                            <a href="@Url.Action("Index", "DatosAcademicos")"><i class="fa fa-fw fa-home" aria-hidden="true"></i> Principal</a>
                        </li>
                        <!-- Mis cortes -->
                        <li class="@(acction == "Index" && route == "Cortes" ? "active" : "")">
                            <a href="@Url.Action("Index", "Cortes")"><i class="fa fa-fw fa-calendar-check-o" aria-hidden="true"></i> Mis cortes</a>
                        </li>

                        <!-- Mi horario -->
                        <li class="@(acction == "Index" && route == "Horario" ? "active" : "")">
                            <a href="@Url.Action("Index", "Horario")"><i class="fa fa-fw fa-clock-o" aria-hidden="true"></i> Mi horario</a>
                        </li>

                        <!-- Mi carga académica -->
                        <li class="@(acction == "Index" && route == "CargaAcademica" ? "active" : "")">
                            <a href="@Url.Action("Index", "CargaAcademica")"><i class="fa fa-fw fa-book" aria-hidden="true"></i> Mi carga académica</a>
                        </li>

                        <!-- Mis calificaciones -->
                        <li class="@(acction == "Index" && route == "Calificaciones" ? "active" : "")">
                            <a href="@Url.Action("Index", "Calificaciones")"><i class="fa fa-fw fa-check-square-o" aria-hidden="true"></i> Mis calificaciones</a>
                        </li>
                    </ul>


                </div>
            }
            else
            {
                <div class="collapse navbar-collapse navbar-ex1-collapse">
                    <ul class="nav navbar-nav side-nav">
                        <li class="active">
                            <a><u>Consúltame  V2</u> Ingresa y visualiza tus notas, cortes, horarios y cargas académicas fácilmente.</a>
                            <a><u>Cualquier duda comuniarse con el departamento de Informática IT</u></a>
                        </li>
                    </ul>
                </div>
            }
            <!-- /.navbar-collapse -->
        </nav>
        <div id="page-wrapper">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>