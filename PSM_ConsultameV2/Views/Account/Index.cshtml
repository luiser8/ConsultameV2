@model PSM_ConsultameV2.Models.Account

@{
    ViewBag.Title = ViewBag.Institucion;
}

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
<div class="col-md-3 col-md-offset-4 mx-auto" id="login">
    <h3 class="text-danger">@TempData["MessageDeuda"]</h3>
    <div class="login-panel panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title" style="font-weight: bold; font-size: 16px">Iniciar sesión</h3>
        </div>
        <div class="panel-body mx-auto">
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Cedula, new { htmlAttributes = new { @class = "form-control", @placeholder = "Cedula" } })
                        @Html.ValidationMessageFor(model => model.Cedula, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Contraseña", @Type = "password" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <input type="submit" value="Entrar" class="btn btn-default btn-block input-lg" style="font-weight: bold; font-size: 16px; margin-bottom: -14px;" />
                    </div>
                </div>
            </div>
        </div>
        <h5 style="font-size:13px; font-weight: bold; padding: 0px 16px 16px 16px;margin: 0 auto;">La contraseña son los 5 primeros dígitos de la cédula</h5>
    </div>
</div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}